{
  "compilerOptions": {
    "module": "CommonJS",
    "removeComments": true,
    "target": "ES2020",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@helpers/*": ["./src/shared/helpers/*"],
      "@config/*": ["./src/shared/configs/*"],
      "@util/*": ["./src/shared/utils/*"],
      "@shared-errors/*": ["./src/shared/error/*"],
      "@v1/*": ["src/modules/collector/*"]
    },
    "resolveJsonModule": true
  }
}
